  <kp>1e15</kp>
  <kd>1e14</kd>
  <fdir1>0 0 1</fdir1>
  <mu>1</mu>
  <mu2>1</mu2>
</gazebo>

<gazebo>
    <plugin name="gz::sim::systems::JointStatePublisher"
            filename="gz-sim-joint-state-publisher-system">
      <topic>joint_states</topic>
    </plugin>
</gazebo>

</robot>